{
  "name": "Microsoft Rewards Collector",
  "version": "1.1",
  "manifest_version": 3,
  "description": "An extension to automatically collect MS Rewards.",
  "icons": {
    "16": "icons/nasapod16x16.png",
    "32": "icons/nasapod32x32.png",
    "48": "icons/nasapod48x48.png",
    "128": "icons/nasapod128x128.png"
  },
  "content_scripts":[
    {
      "matches":["https://rewards.bing.com/*"],
      "js": ["javascript/mainPage.js"]
    },
    {
      "matches":["https://www.bing.com/*form=ML28X*","https://www.bing.com/*form=ML28Y*","https://www.bing.com/*form=ML28ZK*","https://www.bing.com/*form=ML28ZT*","https://www.bing.com/*form=ML28*"],
      "js": ["javascript/focusPage/instaClose.js"]
    },
    {
      "matches":["https://www.bing.com/*form=ML17QA*"],
      "js":["javascript/focusPage/survey.js"]
    },
    {
      "matches":["https://www.bing.com/*FORM=ML12JG*","https://www.bing.com/*form=ML12JG*","https://www.bing.com/*form=ML151V*","https://www.bing.com/*FORM=ML151V*"],
      "js":["javascript/focusPage/quiz.js"]
    },
    {
      "matches":["https://www.bing.com/*cwapchwjauhd1928745y6dwadaw231*"],
      "js":["javascript/focusPage/doSearches.js"]
    }
  ]
}
